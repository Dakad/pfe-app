extends layout

block append head
  link(rel='stylesheet',href='/css/login.css')

block content
  .row
    col-sm-6.col-md-4.col-md-offset-4
      h1.text-center.login-title=title
      .login-panel
        img.img-avatar(src="/img/avatar_login.png"  alt="Avatar for login")/
        form.form-login(method='POST')
          .form-group
            label(for='email') Email address :
            .input-group
              .input-group-addon
                i.fa.fa-at(aria-hidden="true")
              input.form-control#email(
                    type="text"
                    name='username'
                    placeholder="Email" 
                    required autofocus)
                    
          .form-group
            label(for='pwd') Password :
            .input-group
              .input-group-addon
                i.fa.fa-lock(aria-hidden="true")
              input.form-control#pwd(
                    type="password"
                    name="pwd"
                    placeholder="Password" 
                    required)
        
          .checkbox.pull-left
          label
            input(type="checkbox" value="log-again") 
            |  Remember me
          .form-group
          button.btn.btn-lg.btn-success.btn-block(type="submit") Sign in
          hr
          a.btn.btn-lg.btn-primary.btn-block(href='/public/signup') Register first
